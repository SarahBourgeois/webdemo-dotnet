@model MVC_WebSite.Models.AuthData
@{
    ViewBag.Title = "BuildConnexionForm";
}



<!-- form init -->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <center><h2>User authentication : </h2></center>

    <fieldset>
        <legend>Register</legend>
        <!-- Login -->
        <div>
            <p>
                @Html.LabelFor(model => model.Login)
                @Html.EditorFor(model => model.Login)
                @Html.ValidationMessageFor(model => model.Login)
            </p>
        </div>

        <!-- Password -->
        <div>
            <p>
                @Html.LabelFor(model => model.Password)
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </p>
        </div>


        <!-- Submit -->
        <div>
            <button type="submit" name="action" value="add">Connexion</button>
        </div>
    </fieldset>
    <br/>
    <div>
        <p> No account ?
           @Html.ActionLink("Sign up", "CreateAccount", "SignUp")
        </p>
    </div>

<br />






}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

